{
  "name": "fnf-delete",
  "version": "1.0.0",
  "description": "File N Folder Delete - Professional desktop app for managing file deletion with statistics",
  "main": "src/main/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "build:win": "npm run build && electron-builder --win --x64",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "file-management",
    "delete",
    "statistics"
  ],
  "author": {
    "name": "Brainy Tech",
    "email": "dev@brainytech.net"
  },
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.0.0",
    "chart.js": "^4.4.0",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "electron-rebuild": "^3.2.9",
    "vite": "^6.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "net.brainytech.fnfdelete",
    "productName": "FnF Delete",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-renderer/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "signingHashAlgorithms": []
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}
